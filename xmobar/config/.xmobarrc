Config {
    -- Appearance
    font = "xft:Noto Mono:size=9:bold:antialias=true" ,
    additionalFonts = [ "xft:FontAwesome:size=10" ]
    bgColor = "#171717" ,
    fgColor = "#F4DFD3" ,
    alpha = 204 ,
    position = TopW L 94 ,

    -- Behaviour
    overrideRedirect = False ,
    lowerOnStart = True ,

    template = "%UnsafeStdinReader% %uptime% %multicpu% %memory% %diskio% %dynnetwork%}{%default:Master% %battery% <action=`ibus-setup`><fn=1></fn>%kbd%</action> %date% " ,

    commands = [

            Run Uptime [
                    "--template", "<fc=#7F96E0><fn=1></fn><hours>:<minutes></fc>" ,
                    "--padchars", "0" ,
                    "--width", "2"
                ]
                600 ,

            Run MultiCpu [
                    "--template", "<fc=#7FD8D4><fn=1></fn>[<autototal>]</fc>" ,
                    "--High", "70" ,
                    "--Low", "30" ,
                    "--high", "#BF4D4D" ,
                    "--normal", "#F2CEA4" ,
                    "--low", "#F4DFD3" ,
                    "--suffix", "true" ,
                    "--ppad", "3"
                ]
                10 ,

            Run Memory [
                    "--template", "<fc=#D19AC7><fn=1></fn> <used>MB</fc>" ,
                    "--High", "5120",
                    "--Low", "2048" ,
                    "--high", "#BF4D4D" ,
                    "--normal", "#F2CEA4" ,
                    "--low", "#F4DFD3" ,
                    "--width", "4"
                ]
                10 ,

            Run Battery [
                    "--template", "<fc=#F2CEA4><fn=1><acstatus></fn><left> (<timeleft>)</fc>" ,
                    "--Low", "40" ,
                    "--low", "#BF4D4D" ,
                    "--ppad", "3" ,
                    "--suffix", "true" ,
                    "--" ,
                        "-O", "" ,
                        "-i", "" ,
                        "-o", "" ,
                        "-f", "AC0/online"
                ]
                50 ,

            Run DiskIO [
                    ("sda", "<fc=#F2CEA4><fn=1></fn> <read>B</fc> <fc=#7F96E0><fn=1></fn> <write>B</fc>")
                ] [
                    "--width", "4"
                ]
                10 ,

            Run DynNetwork [
                    "--template", "<fc=#F2CEA4><fn=1></fn><rx>KB</fc> <fc=#7F96E0><fn=1></fn><tx>KB</fc>" ,
                    "--width", "4"
                ]
                10 ,

            Run Volume "default" "Master" [
                    "--template", "<action=`pactl set-sink-mute 0 toggle` button=1><action=`pactl set-sink-mute 0 false` button=45><action=`pactl set-sink-volume 0 +2%` button=4><action=`pactl set-sink-volume 0 -2%` button=5><status></action></action></action></action>" ,
                    "--" ,
                        "--on", "<fn=1></fn><volume>%" ,
                        "--off", "<fn=1>  </fn>    " ,
                        "--onc", "#A5C6A7" ,
                        "--offc", "#747474"
                ] 1 ,

            -- TODO replace this with my own IBus plugin
            Run Kbd [
                    ("us(altgr-intl)", "EN") ,
                    ("us", "TH") , -- ibus-libthai uses US layout
                    ("th", "TH") ,
                    ("jp", "JP") ,
                    ("gr", "GR")
                ] ,

            Run Date "<action='orage'><fc=#7FD8D4><fn=1></fn>%a %b %e</fc> <fc=#7F96E0><fn=1></fn>%H:%M</fc></action>" "date" 600 ,

            Run UnsafeStdinReader
        ]
}

