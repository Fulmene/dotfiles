Config {
    -- Appearance
    font = "xft:Inconsolata:size=11:bold:antialias=true" ,
    bgColor = "#0C2A19" ,
    fgColor = "#F4DFD3" ,
    alpha = 204 ,
    position = TopSize L 94 20 ,

    -- Behaviour
    overrideRedirect = False ,

    template = "%StdinReader% | %uptime% | %cpu% %cpufreq% %coretemp% | %memory% | Disk %diskio% | %dynnetwork%}{%default:Master% | %battery% | %kbd% | %date%" ,

    commands = [

            Run Uptime [
                    "--template", "<days>d <hours>h <minutes>m" ,
                    "--width", "2"
                ]
                60 ,

            Run Cpu [
                    "--template", "CPU <total>%" ,
                    "--Low", "30" ,
                    "--High", "70" ,
                    "--low", "green" ,
                    "--normal", "orange" ,
                    "--high", "red" ,
                    "--ppad", "3"
                ]
                10 ,

            Run CpuFreq [
                    "--template", "<cpu0>" ,
                    "--width", "4"
                ]
                10 ,

            Run CoreTemp [
                    "--template", "Tmp <core0>C" ,
                    "--width", "2"
                ]
                10 ,

            Run Memory [
                    "--template", "Mem <usedratio>%" ,
                    "--Low", "20" ,
                    "--High", "60",
                    "--ppad", "3"
                ]
                10 ,

            Run Battery [
                    "--template", "Bat <left>% / <timeleft>" ,
                    "--ppad", "3"
                ]
                50 ,

            Run DiskIO [
                    ("sda", "<read>/<write>")
                ] [
                    "--width", "4"
                ]
                10 ,

            Run DynNetwork [
                    "--template", "Net<rx>KB/s/<tx>KB/s" ,
                    "--width", "4"
                ]
                10 ,

            Run Volume "default" "Master" [] 10 ,

            Run Kbd [
                    ("us", "EN") ,
                    ("th", "TH") ,
                    ("jp", "JP") ,
                    ("gr", "GR")
                ] ,

            Run Date "<action='orage'>%a %b %e %H:%M</action>" "date" 10 ,

            Run StdinReader
        ]
}

