Config {
    -- Appearance
    font = "xft:Noto Mono:size=8:bold:antialias=true" ,
    bgColor = "#0C2A19" ,
    fgColor = "#F4DFD3" ,
    alpha = 204 ,
    position = TopW L 94 ,

    -- Behaviour
    overrideRedirect = False ,

    template = "%StdinReader% [Up %uptime%] [CPU %cpu% %cpufreq% %coretemp%] [Mem %memory%] [Disk %diskio%] [Net %dynnetwork%]}{%default:Master% [Bat %battery%] [%kbd%] %date% " ,

    commands = [

            Run Uptime [
                    "--template", "<days>d <hours>h <minutes>m" ,
                    "--width", "2"
                ]
                600 ,

            Run Cpu [
                    "--template", "<total>%" ,
                    "--Low", "30" ,
                    "--High", "70" ,
                    "--low", "green" ,
                    "--normal", "orange" ,
                    "--high", "red" ,
                    "--ppad", "3"
                ]
                10 ,

            Run CpuFreq [
                    "--template", "<cpu0>" ,
                    "--width", "4"
                ]
                10 ,

            Run CoreTemp [
                    "--template", "<core0>C" ,
                    "--width", "2"
                ]
                10 ,

            Run Memory [
                    "--template", "<usedratio>%" ,
                    "--Low", "20" ,
                    "--High", "60",
                    "--ppad", "3"
                ]
                10 ,

            Run Battery [
                    "--template", "<left>% / <timeleft>" ,
                    "--ppad", "3"
                ]
                50 ,

            Run DiskIO [
                    ("sda", "<read>|<write>")
                ] [
                    "--width", "4"
                ]
                10 ,

            Run DynNetwork [
                    "--template", "<rx>KB/s|<tx>KB/s" ,
                    "--width", "4"
                ]
                10 ,

            Run Volume "default" "Master" [] 10 ,

            Run Kbd [
                    ("us", "EN") ,
                    ("th", "TH") ,
                    ("jp", "JP") ,
                    ("gr", "GR")
                ] ,

            Run Date "<action='orage'>%a %b %e %H:%M</action>" "date" 10 ,

            Run StdinReader
        ]
}

