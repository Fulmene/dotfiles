Config {
    -- Appearance
    font = "xft:Noto Mono:size=9:bold:antialias=true" ,
    additionalFonts = [ "xft:FontAwesome:size=10" ]
    bgColor = "#0C2A19" ,
    fgColor = "#F4DFD3" ,
    alpha = 204 ,
    position = TopW L 94 ,

    -- Behaviour
    overrideRedirect = False ,
    lowerOnStart = True ,

    template = "%UnsafeStdinReader% [Up %uptime%] [CPU %cpu% %cpufreq% %coretemp%] [Mem %memory%] [Disk %diskio%] [Net %dynnetwork%]}{%default:Master% %battery% [%kbd%] %date% " ,

    commands = [

            Run Uptime [
                    "--template", "<days>d <hours>h <minutes>m" ,
                    "--width", "2"
                ]
                600 ,

            Run Cpu [
                    "--template", "<total>%" ,
                    "--Low", "30" ,
                    "--High", "70" ,
                    "--low", "green" ,
                    "--normal", "orange" ,
                    "--high", "red" ,
                    "--ppad", "3"
                ]
                10 ,

            Run CpuFreq [
                    "--template", "<cpu0>" ,
                    "--width", "4"
                ]
                10 ,

            Run CoreTemp [
                    "--template", "<core0>C" ,
                    "--width", "2"
                ]
                10 ,

            Run Memory [
                    "--template", "<usedratio>%" ,
                    "--Low", "20" ,
                    "--High", "60",
                    "--ppad", "3"
                ]
                10 ,

            Run Battery [
                    "--template", "<fn=1>ï‰€</fn><left>% (<timeleft>)" ,
                    "--Low", "40" ,
                    "--high", "#A5C6A7" ,
                    "--normal", "#A5C6A7" ,
                    "--low", "#BF4D4D" ,
                    "--ppad", "3" ,
                    "--" ,
                        "-f", "/sys/class/power_supply/AC0/online"
                ]
                50 ,

            Run DiskIO [
                    ("sda", "<read>|<write>")
                ] [
                    "--width", "4"
                ]
                10 ,

            Run DynNetwork [
                    "--template", "<rx>KB/s|<tx>KB/s" ,
                    "--width", "4"
                ]
                10 ,

            Run Volume "default" "Master" [] 1 ,

            -- TODO replace this with my own IBus plugin
            Run Kbd [
                    ("us(altgr-intl)", "EN") ,
                    ("us", "TH") , -- ibus-libthai uses US layout
                    ("th", "TH") ,
                    ("jp", "JP") ,
                    ("gr", "GR")
                ] ,

            Run Date "<action='orage'>%a %b %e %H:%M</action>" "date" 600 ,

            Run UnsafeStdinReader
        ]
}

