Config {
    -- Appearance
    font = "xft:Noto Mono:size=9:bold:antialias=true" ,
    additionalFonts = [ "xft:FontAwesome:size=10" ] ,
    bgColor = "#262626" ,
    fgColor = "#FFFFDF" ,
    alpha = 204 ,
    position = TopW L 92 ,

    -- Behaviour
    overrideRedirect = False ,
    lowerOnStart = True ,

    template = "%UnsafeStdinReader% %uptime% %multicpu% %memory% +%swap% %diskio%}{%default:Master% %battery% <action=`ibus-setup`><fc=#AF875F><fn=1></fn>%kbd%</fc></action> %date% " ,

    commands = [

            Run Uptime [
                    "--template", "<fc=#AF875F><fn=1></fn><days>d</fc> <fc=#DFAF87><hours>:<minutes></fc>" ,
                    "--padchars", "0" ,
                    "--width", "2"
                ]
                600 ,

            Run MultiCpu [
                    "--template", "<fc=#FFFFDF><fn=1></fn>[<autototal>]</fc>" ,
                    "--High", "70" ,
                    "--Low", "30" ,
                    "--high", "#D75F5F" ,
                    "--normal", "#DFAF87" ,
                    "--low", "#FFFFDF" ,
                    "--suffix", "true" ,
                    "--ppad", "3"
                ]
                10 ,

            Run Memory [
                    "--template", "<fc=#FFFFDF><fn=1></fn> <used>MB</fc>" ,
                    "--High", "4096",
                    "--Low", "2048" ,
                    "--high", "#D75F5F" ,
                    "--normal", "#DFAF87" ,
                    "--low", "#FFFFDF" ,
                    "--width", "4"
                ]
                10 ,

            Run Swap [
                    "--template", "<used>MB" ,
                    "--High", "1024",
                    "--Low", "512" ,
                    "--high", "#D75F5F" ,
                    "--normal", "#DFAF87" ,
                    "--low", "#FFFFDF" ,
                    "--width", "5"
                ]
                10 ,

            Run DiskIO [
                    ("sda", "<fc=#DFAF87><fn=1></fn> <read>B</fc> <fc=#AF875F><fn=1></fn> <write>B</fc>")
                ] [
                    "--width", "4"
                ]
                10 ,

            Run Volume "default" "Master" [
                    "--template", "<action=`amixer -q sset Master toggle` button=1><action=`amixer -q sset Master unmute` button=45><action=`amixer -q sset Master 2dB+` button=4><action=`amixer -q sset Master 2dB-` button=5><status></action></action></action></action>" ,
                    "--ppad", "3" ,
                    "--" ,
                        "--on", "<fn=1></fn><volume>%" ,
                        "--off", "<fn=1>  </fn>    " ,
                        "--onc", "#DFAF87" ,
                        "--offc", "#AF875F"
                ] 1 ,

            Run Battery [
                    "--template", "<fc=#FFFFDF><fn=1><acstatus></fn><left> (<timeleft>)</fc>" ,
                    "--High", "80" ,
                    "--Low", "40" ,
                    "--high", "#FFFFDF" ,
                    "--normal", "#DFAF87" ,
                    "--low", "#D75F5F" ,
                    "--ppad", "3" ,
                    "--suffix", "true" ,
                    "--" ,
                        "-O", "" ,
                        "-i", "" ,
                        "-o", "" ,
                        "-f", "AC0/online"
                ]
                50 ,

            -- TODO replace this with my own IBus plugin
            Run Kbd [
                    ("us(altgr-intl)", "EN") ,
                    ("us", "TH") , -- ibus-libthai uses US layout
                    ("th", "TH") ,
                    ("jp", "JP") ,
                    ("gr", "GR")
                ] ,

            Run Date "<fc=#5F8787><fn=1></fn>%a %b %e</fc> <fc=#FFFFDF><fn=1></fn>%H:%M</fc>" "date" 600 ,

            Run UnsafeStdinReader
        ]
}

