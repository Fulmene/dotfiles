#!/bin/sh

device=`nmcli dev | grep ' connected ' | head -1 | awk '{print $2}'`

case $device in
    "ethernet")
        echo "Ethernet"
        ;;
    "wifi")
        iwgetid -r || nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -d ':' -f 2 || echo "WiFi"
        ;;
    "")
        echo "<fc=#5F8787>Disconnect</fc>"
        ;;
esac

