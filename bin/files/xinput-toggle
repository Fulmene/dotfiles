#!/bin/bash

if [[ $# -ne 1 ]]; then
    echo 'Usage: xinput-toggle "[device]"' >&2
    exit 1
fi

device=$1
state=$( xinput list-props "$device" | grep "Device Enabled" | grep -o "[01]$" )
if [[ state -eq 0 ]]; then
    state_name=enabled
else
    state_name=disabled
fi

xinput set-int-prop "$device" "Device Enabled" 8 "$((1-state))"
notify-send --urgency=low --app-name=xinput "Device $device $state_name"

